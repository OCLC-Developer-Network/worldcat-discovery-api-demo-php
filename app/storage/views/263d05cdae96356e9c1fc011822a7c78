
<?php $__env->startSection('content'); ?>
<div id="bibliographic-resource" resource="<?php echo $record->getId(); ?>" typeof="<?php echo $record->getType(); ?>">
    <h1 id="bibliographic-resource-name" property="schema:name"><?php echo $record->getName(); ?></h1>
    
    <?php if ($record->getAuthor()): ?>
    <div id="author" property="schema:author" resource="<?php echo $record->getAuthor()->getUri(); ?>" typeof="<?php echo $record->getAuthor()->type(); ?>">
        <h2 id="author-name" property="schema:name"><?php echo $record->getAuthor()->getName(); ?></h2>
    </div>
    <?php endif; ?>
    
    <?php if (count($record->getContributors()) > 0): ?>
    <h3>Contributors</h3>
    <ul>
        <?php foreach ($record->getContributors() as $contributor): ?>
        <li property="schema:contributor" resource="<?php echo $contributor->getUri(); ?>" typeof="<?php echo $contributor->type(); ?>"><span class="constributor-name" property="schema:name"><?php echo $contributor->getName(); ?></span></li>
        <?php endforeach; ?>
    </ul>
    <?php endif; ?>
    
    <?php if (count($record->getAbout()) > 0): ?>
    <h2>Subjects</h2>
    <ul>
        <?php foreach (getDisplaySubjects($record->getAbout()) as $about): ?>
        <li property="schema:about" resource="<?php echo $about->getUri(); ?>" typeof="<?php echo $about->type(); ?>"><span class="subject-name" property="schema:name"><?php echo $about->getName(); ?></span></li>
        <?php endforeach; ?>
    </ul>
    <?php endif; ?>
    
    <h2>Publication Info</h2>
    <p>
    <?php if ($record->getType()): ?>
    <span class="label">Format: </span><span class="value"><?php echo getFormatString($record->getType()); ?></span>
    <br/>
    <?php endif; ?>
    
    <?php if ($record->getBookEdition()): ?>
    <span class="label">Edition: </span><span class="value" property="schema:bookEdition"><?php echo $record->getBookEdition(); ?></span>
    <br/>
    <?php endif; ?>
    
    <?php if ($record->getLanguage()): ?>
    <span class="label">Language: </span><span class="value" property="schema:inLanguage"><?php echo getLanguageString($record->getLanguage()); ?></span>
    <br/>
    <?php endif; ?>
    
    <span class="label">Published: </span>
    <span class="value" property="http://purl.org/library/placeOfPublication"><?php echo getPlaceOfPublicationString($record->getPlacesOfPublication()); ?></span> : 
    
    <?php if ($record->getPublisher()): ?>
    <span class="value"><span property="schema:publisher" typeof="<?php echo $record->getPublisher()->type(); ?>"><span property="schema:name"><?php echo $record->getPublisher()->getName(); ?></span></span></span>
    <?php endif; ?>
    
    <span class="value" property="schema:datePublished"><?php echo $record->getDatePublished(); ?></span>
    <br/>
    
    <?php if ($record->getNumberOfPages()): ?>
    <span class="label">Physical Details: </span>
    <span class="value"><span property="schema:numberOfPages"><?php echo $record->getNumberOfPages(); ?></span> pages</span>
    <br/>
    <?php endif; ?>
    
    <?php if (count($record->getManifestations()) > 0): ?>
    <span class="label">ISBNs:</span>
    <?php foreach($record->getManifestations() as $manifestation): ?>
    <span class="value" property="schema:isbn"><?php echo $manifestation->getISBN(); ?></span>
    <?php endforeach; ?>
    <br/>
    <?php endif; ?>
    
    <span class="label">OCLC Number:</span>
    <span class="value" property="http://purl.org/library/oclcnum"><?php echo $record->getOCLCNumber(); ?></span>
    <br/>
    </p>
    
    <?php if ($record->getDescriptions()): ?>
    <h3>Description</h3>
    <p property="schema:description"><?php echo getDescriptionString($record->getDescriptions()); ?></p>
    <?php endif; ?>
    
    <?php if ($record->getGenres()): ?>
    <h3>Genres</h3>
    <ul>
        <?php foreach (getDistinctGenres($record->getGenres()) as $genre): ?>
        <li property="schema:genre"><?php echo $genre; ?></li>
        <?php endforeach; ?>
    </ul>
    <?php endif; ?>
    
    <?php if (count($record->getReviews()) > 0): ?>
    <div property="schema:reviews">
        <h3>Reviews</h3>
        <?php foreach($record->getReviews() as $review): ?>
        <div resource="<?php echo $review->getUri(); ?>" typeof="schema:Review">
            <p property="schema:reviewBody"><?php echo $review->getReviewBody(); ?></p>
        </div>
        <?php endforeach; ?>
    </div>
    <?php endif; ?>
</div>
<?php $__env->stopSection(); ?>
<?php echo $__env->make('layouts.master', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>